wind_thresh   = [ NA ];
wind_logic    = UNION;
eclv_points   = 0.05;

//
// Forecast and observation fields to be verified
//
fcst = {
   field = [
      {
        name       = "TMP";
        level      = [ "Z2" ];
        cat_thresh = [ >0.0 ];
      },

      {
        name       = "DPT";
        level      = [ "Z2" ];
        cat_thresh = [ >0.0 ];
      }

   ];

}
obs = fcst;
obs = { wind_thresh = >2.572; };

////////////////////////////////////////////////////////////////////////////////

//
// Point observation filtering options
// May be set separately in each "obs.field" entry
//
message_type   = [ "ADPSFC" ];
sid_exc        = [];
